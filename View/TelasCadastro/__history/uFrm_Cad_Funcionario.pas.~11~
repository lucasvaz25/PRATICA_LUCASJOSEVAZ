{$R *.dfm}


procedure TFrm_Cad_Funcionario.FormCreate( Sender: TObject );
var
  Qry: TDataModule1;
begin
  inherited;
  Qry                     := TDataModule1.Create( Self );
  LkpCargo.ListSource     := Qry.DataSource1;
  LkpCargo.ListFieldIndex := Qry.DataSource1.DataSet.FieldByName( 'id' ).AsInteger;
end;

end.
